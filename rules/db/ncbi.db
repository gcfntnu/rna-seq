#-*- mode:snakemake -*-
"""NCBI/ENTREZ data mainly fetched usin efetch
"""

rule ncbi_homo_spaiens_rrna:
    output:
        join(EXT_DIR, 'ncbi', 'homo_sapiens', 'fasta', 'rrna.fa')
    singularity:
        'docker://flatberg/entrez-direct:10.2'
    shell:
        'efetch -db nuccore -id U13369.1 -format fasta > {output}'

rule ncbi_mus_musculus_rrna:
    output:
        join(EXT_DIR, 'ncbi', 'mus_musculus', 'fasta', 'rrna.fa')
    singularity:
        'docker://flatberg/entrez-direct:10.2'
    shell:
        'efetch -db nuccore -id bk000964.3 -format fasta > {output}'

