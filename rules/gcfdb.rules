#-*- mode:snakemake -*-
extra_conf_fn = srcdir('gcfdb.config')
if os.path.exists(extra_conf_fn):
    with open(extra_conf_fn) as fh:
        c  = yaml.load(fh) or {}
        update_config2(config, c)

if not config.get('ref_dir'):
    if config['db']['reference'] == 'ensembl':
        include:
            'db/ensembl.db'
    if config['db']['reference'] == 'gencode':
        include:
            'db/gencode.db'

include:
    'gcfdb/spikein.db'
include:
    'gcfdb/contaminants.db'
include:
    'gcfdb/rrna.db'
