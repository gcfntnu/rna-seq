#-*- mode: snakemake -*-
"""FastQC: A quality control tool for high throughput sequence data.

https://www.bioinformatics.babraham.ac.uk/projects/fastqc/
"""
rule qc_bam_fastqc:
    input:
        bam = get_sorted_bam
    output:
        'logs/{sample}/{sample}.sorted_fastqc.zip'
    params:
        out = 'logs/{sample}'
    threads:
        4
    shell:
        'fastqc -t {threads} -o {params.out} {input.bam}'
